{
  "name": "@bluesky-demo/server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsc -w --project tsconfig.json & nodemon -q -w dist dist/index.js",
    "build": "(cd ../common && yarn build) && tsc --project tsconfig.json",
    "test": "ava -v */data.ts",
    "temp": "IN_MEMORY=true yarn dev",
    "wipe-db": "rimraf dev.sqlite && rimraf blockstore"
  },
  "dependencies": {
    "@vscode/sqlite3": "^5.0.7",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "knex": "^1.0.4",
    "level": "^7.0.1",
    "multiformats": "^9.6.4",
    "ucans": "0.9.0-alpha3",
    "zod": "^3.14.2"
  },
  "devDependencies": {
    "@bluesky-demo/common": "*",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "ava": "^4.1.0",
    "axios": "^0.26.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
